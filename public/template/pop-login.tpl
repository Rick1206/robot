<div class="pop-login">
    <a href="javascript:;" class="close b-close"></a>
    <h1 class="title">用户登录</h1>
    <div class="login-box">
        <form action="" class="form-horizontal" id="form_login">
            <div class="control-group">
                <label class="control-label">登录帐号：</label>
                <div class="controls">
                    <input type="text"  placeholder="" class="input-block-level" required>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">登录密码：</label>
                <div class="controls">
                    <input type="password"  placeholder="" class="input-block-level" required>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label"></label>
                <div class="controls">
                    <button class="reset" type="reset">重填</button>
                    <button class="submit" type="submit">登录</button>
                </div>
            </div>
        </form>
    </div>
</div>